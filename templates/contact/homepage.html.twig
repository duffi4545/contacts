{% extends 'base.html.twig' %}

{% block title %}Kontakty{% endblock %}

{% block body %}
<table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Note</th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.firstName }}</td>
                    <td>{{ contact.lastName }}</td>
                    <td>{{ contact.phoneNumber }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.note }}</td>
                    <td>akce</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
